{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["node", "jest"],
    "lib": ["ES2020", "ESNext"],
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["src", "tests", "types"],
  "exclude": ["node_modules"]
}
